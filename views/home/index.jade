extends ../layout

block content
  nav.off-canvas-navigation.clearfix
          ul
            li.menu-item
              a.menu-button(href='#menu') 工作类别
            li.sidebar-item
              a.sidebar-button(href='#sidebar') 菜单
  nav#menu(role='navigation')
    .navwarper
      ul.cate-ul
        li 
          a(href="/")
            if active_category
              .nav-mark
            else
              .nav-mark.nav-mark-active
            |全部
        each category in category_array
          li 
            a(href="/category/#{ category.replace(/\//,'-') }")
              //.nav-mark-active
              if active_category == category.replace(/\//,'-')
                .nav-mark.nav-mark-active
              else
                .nav-mark
              | #{category}
        
  // Main Content

  section(role='main')
    //- h1 最新招聘信息
    .mainwarper

      ul.joblist-ul
        .jobfilter
          form(id="jobfilter", method="post", action="#")
            ul
              li
                span 城市:
                select(name="city")
                  each city in city_array
                    option(value="#{city}") #{city}
              li
                span 月薪范围:
                select(name="salary")
                  each salary in salary_array
                    option(value="#{salary}") #{salary}
                span ￥
        if jobs.length == 0
          li
            h2 目前还没有招聘信息
        else
          each job in jobs 
            li
              h2 
                a(href="/job/#{job._id}") #{job.title}
              ul.joblist-detail
                li 
                  span #{job.city}
                li 公司:
                  span #{job.company}
                li 月薪:
                  span #{job.salary}
                li 发布日期:
                  span #{job._id.getTimestamp().yyyymmdd() }
  // Aside Right
  section#sidebar(role='complementary')
    .right-sidebar
      .sidebar-header
        span 我申请的工作
      p not yet 
    .right-sidebar
      .sidebar-header
        span 最新用户
      p 侧栏内容
