extends ../layout

block content 
	nav.off-canvas-navigation.clearfix
		ul
			li.menu-item
				a.menu-button(href='#menu') 左侧栏
			li.sidebar-item
				a.sidebar-button(href='#sidebar') 菜单
	nav#menu(role='navigation')
		.navwarper
			ul.cate-ul
				li 
					a(href="#")
						.nav-mark
						| 开始
	// Main Content
	section(role='main')
		//- h1 最新招聘信息
		.mainwarper

			ul.joblist-ul
				.jobfilter
					h2(style="text-align:center;margin:0px;") 我申请的工作
				if jobs.length == 0
					li
						h2 你目前还没有申请过任何工作
				else
					each job in jobs 
						li
							a(href="/job/#{job._id}", target="_blank")
								h2=job.title
							a.btn-grey.btn-sm(href="/job/cancel/#{job._id}" style="margin-right:20px;") 取消申请
							

	// Aside Right
	section#sidebar(role='complementary')
		.right-sidebar
			.sidebar-header
				span 我申请的工作
			p not yet 
		.right-sidebar
			.sidebar-header
				span 最新用户
			p 侧栏内容